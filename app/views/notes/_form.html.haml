%div.mt-5
  = form_with model: note, local: true, data: { turbo: false } do |f|
    - if note.errors.any?
      %div.bg-red-100.border-l-4.border-red-500.text-red-700.p-4.mb-4
        %ul
          - note.errors.full_messages.each do |msg|
            %li= msg
    .mb-4
      = f.label :title, "Title", class: "form-label"
      = f.text_field :title, autofocus: true, class: "form-input"
    .mb-4
      = f.label :text, "Text", class: "form-label"
      = f.text_area :text, class: "form-input h-96"
    .mb-6
      = f.submit "Save", class: "form-button"
