%div.min-h-screen.bg-gray-100.flex.items-center.justify-center
  %div.text-center.bg-white.shadow-lg.rounded-lg.p-8.max-w-md
    %div.mb-6
      = link_to image_tag("notes-logo.svg", alt: "Logo", class: "h-16 mx-auto"), root_path
    %h1.text-3xl.font-extrabold.text-gray-800.mb-4 Sign up for QuickNotes
    = form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f|
      = render 'devise/shared/error_messages', resource: resource
      .mb-4
        = f.label :name, "First Name", class: "form-label"
        = f.text_field :name, class: "form-input"
      .mb-4
        = f.label :last_name, "Last Name", class: "form-label"
        = f.text_field :last_name, class: "form-input"
      .mb-4
        = f.label :email, "Email", class: "form-label"
        = f.email_field :email, autofocus: true, class: "form-input"
      .mb-4
        = f.label :password, "Password", class: "form-label"
        = f.password_field :password, class: "form-input"
      .mb-4
        = f.label :password_confirmation, "Confirm Password", class: "form-label"
        = f.password_field :password_confirmation, class: "form-input"
      .mb-6
        = f.submit "Sign up", class: "form-button"
    %p.mt-4
      = link_to 'Already have an account?', new_user_session_path, class: 'text-blue-500 hover:text-blue-600'
